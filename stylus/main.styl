@import './_reset-styles.styl'
@import './_tokens.styl'

body
	backgroundco veryLightGray

main
	margin 100px auto
	max-width 350px
	font-family ffPrimary
	color transparentWhite
	border-radius 10px
	overflow hidden

.item
	padding 40px
	& > h2
		color veryLightGray
		font-family ffSecondary
		text-transform uppercase
		font-size 2.8rem
	& > button
		border none
		background-color veryLightGray
		height 40px
		padding 0 30px
		border-radius 20px
		cursor pointer
		transition .1s
		&:hover
			background-color transparent
			box-shadow:0px 0px 0px 2px white inset;
			color veryLightGray
	&.sedans
		background-color brightOrange
		& > button
			color brightOrange
			&:hover
				color veryLightGray
	&.suvs
		background-color darkCyan
		& > button
			color darkCyan
			&:hover
				color veryLightGray
	&.luxury
		background-color veryDarkCyan
		& > button
			color veryDarkCyan
			&:hover
				color veryLightGray